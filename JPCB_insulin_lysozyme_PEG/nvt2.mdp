;
;       GROMACS
;       Input for NVT-2
;
;
;define                 =  -DDISRES
integrator              =  md
nsteps                  =  50000
dt                      =  0.002
; Removing CM Translation and Rotation
comm_mode               =  Linear
nstcomm                 =  1000
;
; Output Control
nstlog                  = 1000
nstenergy               = 1000
nstxout                 = 0
nstvout                 = 0
nstxout-compressed      = 1000
nstfout                 = 0
; Neighbour Searching
continuation            = yes
cutoff-scheme           = Verlet
nstlist                 = 15
ns_type                 = grid
pbc                     = xyz
rlist                   = 1.0
;
; Electrostatic
coulombtype             = PME
rcoulomb                = 1.0
fourierspacing          = 0.12
pme-order               = 4
ewald-rtol              = 1e-5
periodic_molecules      = yes
;
; VdW
;vdw-type               = shift
rvdw                    = 1.0
;
; Constraints
constraints             = h-bonds
constraint-algorithm    = LINCS
; shake-tol = 0.0001
lincs_iter              = 4
; Temperature
Tcoupl                  = nose-hoover
tc_grps                 = system
tau_t                   = 1
ref_t                   = 300
;
; Initial Velocities
gen_vel                 = no

